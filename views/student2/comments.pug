doctype html
html
  head
    title Manage Comments
    link(rel="stylesheet", href="/styles.css")
  body
    h1 Manage Comments for Prompt Engineering

    // Comments List
    if comments && comments.length
      ul#comments
        each comment in comments
          li
            span= comment.comment
            // Edit and Delete Buttons
            form(action=`/student2/comments/edit/${comment.id}` method="POST" style="display:inline")
              input(type="text" name="comment" value=comment.comment)
              button(type="submit") Edit
            form(action=`/student2/comments/delete/${comment.id}` method="POST" style="display:inline")
              button(type="submit") Delete
    else
      p No comments available. Be the first to add one!

    // Add Comment Form
    h3 Add a New Comment
    form(action="/student2/comments/add" method="POST")
      input(type="text" name="comment" placeholder="Enter your comment here")
      button(type="submit") Add Comment

    // Back to Main Page Link
    a(href="/student2") Back to Student 2 Page
